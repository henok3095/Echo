{
  "name": "echo",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON -c blue,green \"vite --strictPort --port 5173\" \"wait-on http://localhost:5173 && electron . --disable-gpu --disk-cache-dir=.cache\"",
    "start": "npm run build && electron . --disable-gpu --disk-cache-dir=.cache",
    "build": "vite build",
    "dist": "vite build && electron-builder",
    "dist:win": "vite build && electron-builder -w",
    "postinstall": "vite build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.6",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.henok.echo",
    "productName": "Echo",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "assets/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@supabase/supabase-js": "^2.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "react-easy-crop": "^5.0.1",
    "react": "^19.1.1",
    "react-big-calendar": "^1.8.6",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.7.1",
    "recharts": "^2.8.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  }
}
